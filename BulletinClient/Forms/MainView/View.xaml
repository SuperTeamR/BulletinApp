<UserControl x:Class="BulletinClient.Forms.MainView.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulletinClient.Forms.MainView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Right" Visibility="{Binding DontHasAccess}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин: "/>
                <TextBox Margin="5,0,0,0" Width="100" Text="{Binding Login}"/>
                <TextBlock Margin="10,0,0,0" Text="Пароль: "/>
                <TextBox Margin="5,0,0,0" Width="100" Text="{Binding Password}"/>
                <Button Margin="10,0,5,0" Content="Подключить" Command="{Binding CommandBoardAuth}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" HorizontalAlignment="Right" Visibility="{Binding HasAccess}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Подключен "/>
                <TextBlock Margin="5,0,5,0" Text="{Binding BoardLogin}"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding HasAccess}">
            <TextBlock VerticalAlignment="Center" Text="Название: "/>
            <TextBox Margin="5,0,0,0" Width="100" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center" Text="{Binding BulletinName}"/>
            <Button Width="150" Height="30" Content="Добавить" Command="{Binding CommandAddBulletin}" />
        </StackPanel>
       
        <DataGrid Grid.Row="3" ItemsSource="{Binding Bulletins}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="400">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Url}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
